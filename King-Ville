<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>BlockVerse</title>
<style>
body { margin:0; background:#0f172a; color:white; font-family:sans-serif; }
#game { width:100vw; height:100vh; }
canvas { display:block; }
</style>
</head>
<body>
<canvas id="game"></canvas>

<script>
const canvas = document.getElementById("game");
const ctx = canvas.getContext("2d");
canvas.width = innerWidth;
canvas.height = innerHeight;

let player = { x:100, y:100, size:30 };

function draw() {
  ctx.clearRect(0,0,canvas.width,canvas.height);
  ctx.fillStyle = "orange";
  ctx.fillRect(player.x, player.y, player.size, player.size);
  requestAnimationFrame(draw);
}

document.addEventListener("keydown", e=>{
  if(e.key==="w") player.y -= 10;
  if(e.key==="s") player.y += 10;
  if(e.key==="a") player.x -= 10;
  if(e.key==="d") player.x += 10;
});

draw();
</script>
</body>
</html>